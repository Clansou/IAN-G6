{
    "manifest_version": 2,
    "name": "PerfectBot",
    "version": "1.0",
    "description": "Une extension pour aider les analphabètes et autres personnes en difficulté",

    "browser_action": {
        "default_popup": "chatbot.html"
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["chatbot.js"],
            "css": ["chatbot.css"]
        }
    ]
}